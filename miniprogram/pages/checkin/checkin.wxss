.box {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.supplement {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  padding-top: 20rpx;
}

.headline {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  font-size: 40rpx;
  padding: 20rpx;
}

.small_box {
  width: 100%;
}

.checkbox {
  display: flex;
  flex-direction: column;
  align-content: flex-start;
  padding: 20rpx;
  font-size: 40rpx;
  width: 100%;
}

